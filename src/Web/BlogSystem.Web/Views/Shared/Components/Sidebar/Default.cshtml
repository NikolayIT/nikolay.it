<!-- Posts -->
<div class="posts margin-bottom-40">
    <div class="headline headline-md">
        <h2>Recent Posts</h2>
    </div>
    @foreach (var post in Model.RecentPosts)
    {
        <dl class="dl-horizontal">
            <dt><a href="@post.Url"><i class="@post.IconClass"></i></a></dt>
            <dd>
                <p>
                    <a href="@post.Url">@post.Title</a>
                </p>
            </dd>
        </dl>
    }
</div>
<!-- End posts -->
