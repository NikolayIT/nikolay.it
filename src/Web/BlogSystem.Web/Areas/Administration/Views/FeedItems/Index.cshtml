@model IEnumerable<BlogSystem.Web.ViewModels.Administration.FeedItems.FeedItemViewModel>

@{
    ViewData["Title"] = $"Feed Items ({Model.Count()})";
    ViewData["SkipSidebar"] = true;
}

<button class="btn btn-success" onclick="window.location.reload()">Refresh</button>

@if (!this.Model.Any())
{
    <p>Everything read. Well done!</p>
}
else
{
    <table class="table table-striped table-bordered table-condensed table-hover table-responsive">
        <tr>
            <th>Title</th>
            <th>Feed</th>
            <th>Created on</th>
            <th></th>
        </tr>
    
        @foreach (var item in this.Model)
        {
            <tr>
                <td><img src="@item.FaviconUrl" width="24" alt="@item.FeedName" /> <a href="@item.Url" target="_blank">@item.Title</a></td>
                <td><a href="@item.FeedUrl" target="_blank">@item.FeedName</a> <a asp-area="Administration" asp-controller="FeedItems" asp-action="Index" asp-route-id="@item.FeedId"><i class="fas fa-table"></i></a></td>
                <td>@Html.DisplayFor(x => item.CreatedOn)</td>
                <td>
                    @if (item.IsRead)
                    {
                        <button data-id="@item.Id" data-unread-button="true" class="btn btn-default btn-sm">Mark as unread</button>
                    }
                    else
                    {
                        <a data-id="@item.Id" data-read-button="true" class="btn btn-success btn-sm" href="@item.Url" target="_blank"><i class="fa fa-window-restore"></i></a>
                        <button data-id="@item.Id" data-read-button="true" class="btn btn-danger btn-sm"><i class="fas fa-times"></i></button>
                    }
                </td>
            </tr>
        }
    </table>
}

@section Scripts
{
    <script>
        $("*[data-read-button]").click(function () {
            var button = $(this);
            var id = button.attr("data-id");
            $.get("/Administration/FeedItems/MarkAsRead?id=" + id,
                function() {
                    button.hide();
                });
        });

        $("*[data-unread-button]").click(function () {
            var button = $(this);
            var id = button.attr("data-id");
            $.get("/Administration/FeedItems/MarkAsUnread?id=" + id,
                function() {
                    button.hide();
                });
        });

        window.setTimeout(function () {
            window.location.reload();
        }, 60 * 1000);

        var favicon = new Favico({
            bgColor: '#0000FF',
            type: 'rectangle',
            fontStyle: 'bolder'
        });
        favicon.badge(@Model.Count());
    </script>
}
