@model BlogSystem.Data.Models.Feed

@{
    ViewData["Title"] = "Edit Feed";
}

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Url" class="control-label"></label>
        <input asp-for="Url" class="form-control" />
        <span asp-validation-for="Url" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        @Html.EditorFor(x => x.Type)
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="checkbox">
            <label>
                <input asp-for="IsEnabled" /> @Html.DisplayNameFor(model => model.IsEnabled)
            </label>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ItemsSelector" class="control-label"></label>
        <input asp-for="ItemsSelector" class="form-control" />
        <span asp-validation-for="ItemsSelector" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cookies" class="control-label"></label>
        <input asp-for="Cookies" class="form-control" />
        <span asp-validation-for="Cookies" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PostData" class="control-label"></label>
        <input asp-for="PostData" class="form-control" />
        <span asp-validation-for="PostData" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UrlRegexFilter" class="control-label"></label>
        <input asp-for="UrlRegexFilter" class="form-control" />
        <span asp-validation-for="UrlRegexFilter" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NameRegexFilter" class="control-label"></label>
        <input asp-for="NameRegexFilter" class="form-control" />
        <span asp-validation-for="NameRegexFilter" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastUpdate" class="control-label"></label>
        <input asp-for="LastUpdate" class="form-control" />
        <span asp-validation-for="LastUpdate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UpdateIntervalInMinutes" class="control-label"></label>
        <input asp-for="UpdateIntervalInMinutes" class="form-control" />
        <span asp-validation-for="UpdateIntervalInMinutes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="checkbox">
            <label>
                <input asp-for="NotifyByEmail" /> @Html.DisplayNameFor(model => model.NotifyByEmail)
            </label>
        </div>
    </div>
    <input type="hidden" asp-for="CreatedOn" />
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
